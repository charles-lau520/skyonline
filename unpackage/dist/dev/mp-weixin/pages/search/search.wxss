/* 搜索框 start */
.search-ico {
	width: 40rpx;
	height: 40rpx;
}
.search-text{
	font-size: 20rpx;
	background-color: #F1F1F1;
	height: 60rpx;
	width: 650px;
}
.search-block{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	padding: 0rpx,20rpx,20rpx,20rpx;
	background-color: "#F8F8F8";
	/* 固定搜索栏 */
	position: fixed;
	top: 100;
	z-index: 2000;
}
.search-icon-wapper{
	background-color: #F1F1F1;
	/* 通过flex，使得图片居中 */
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	padding: 0rpx 10rpx;
}
/* 搜索框 end */
/* 预告片列表 start */
.movie-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding: 100rpx 10rpx 0rpx 10rpx;
}
.poster {
	width: 200rpx;
	height: 270rpx;
}
.movie-wapper {
	padding: 10rpx 20rpx;
}
/* 预告片列表 end */


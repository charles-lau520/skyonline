/* 热门超英 start */
.super-hot {
	margin-top: 10rpx;
	padding: 20rpx;
}
.hot-title-wapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-flow: row;
	        flex-flow: row;
}
.hot-ico {
	width: 30rpx;

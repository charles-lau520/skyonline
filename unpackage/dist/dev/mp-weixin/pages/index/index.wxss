}
.hot-title {
	font-size: 15px;
	margin-left: 15rpx;
	font-weight: bold;
}
.hot {
	width: 100%;
	white-space: nowrap;
}
.single-poster {
	display: inline-block;
	margin-left: 20rpx;
}
.poster-wapper {
	display: -webkit-box;
	display: -webkit-flex;
